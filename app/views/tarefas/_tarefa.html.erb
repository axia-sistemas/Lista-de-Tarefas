<article id="<%= dom_id tarefa %>" class="tarefa">
  <header>
    <h2><%= tarefa.titulo %></h2>
  </header>

  <p><strong>Descrição:</strong> <%= tarefa.descricao.presence || "Sem descrição" %></p>

  <p>
    <strong>Concluída:</strong>
    <%= tarefa.concluida? ? "✅ Sim" : "❌ Não" %>
  </p>

  <footer>
    <%= link_to 'Editar', edit_tarefa_path(tarefa), class: "btn" %>
    <%= link_to 'Apagar', tarefa, method: :delete, data: { confirm: "Tem certeza?" }, class: "btn-danger" %>
  </footer>
</article>
